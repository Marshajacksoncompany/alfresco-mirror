<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- Import Web Scripts Framework -->
	<import resource="classpath*:org/springframework/extensions/webscripts/*-context.xml" />
	

   <!-- Add our config location into the mix -->
   <bean id="web.configsource" class="org.springframework.extensions.config.source.UrlConfigSource">
      <constructor-arg>
         <list>
            <value>classpath:test-config.xml</value>
         
            <!-- Spring Web Scripts -->
            <value>classpath:org/springframework/extensions/webscripts/spring-webscripts-config.xml</value>
            <value>classpath:META-INF/spring-webscripts-config-custom.xml</value>
            <value>jar:*!/META-INF/spring-webscripts-config-custom.xml</value>
            
            
            <!-- Custom location -->
            
         </list>
      </constructor-arg>
   </bean>

    <bean id="formIdCache" class="org.alfresco.wcm.client.impl.cache.EhCacheAdapter">
        <property name="cache">
            <bean class="org.springframework.cache.ehcache.EhCacheFactoryBean">
                <property name="cacheManager">
                    <ref bean="ehCacheManager" />
                </property>
                <property name="cacheName">
                    <value>formIdCache</value>
                </property>
            </bean>
        </property>
    </bean>

    <bean name="ehCacheManager" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean" />

    <bean id="webscriptCaller" class="org.alfresco.wcm.client.impl.WebScriptCallerImpl" init-method="init">
        <property name="baseUrl" value="http://localhost:8080/alfresco/service/api/" />
        <property name="credentials">
            <bean class="org.apache.commons.httpclient.UsernamePasswordCredentials">
                <constructor-arg value="admin"/>
                <constructor-arg value="admin"/>
            </bean>
        </property>
    </bean>
    
    
</beans>
