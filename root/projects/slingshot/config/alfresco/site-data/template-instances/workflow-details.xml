<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
   <template-type>org/alfresco/workflow-details</template-type>
   <components>
      
      <!-- Title -->

      <component>
         <region-id>title</region-id>
         <url>/components/title/collaboration-title</url>
      </component>
      <component>
         <region-id>portlet-title</region-id>
         <url>/components/title/portlet-collaboration-title</url>
      </component>

      <component>
         <region-id>repo-title</region-id>
         <url>/components/title/simple-title</url>
         <properties>
            <title>title.repository</title>
            <subtitle>title.browser</subtitle>
         </properties>
      </component>
      <component>
         <region-id>portlet-repo-title</region-id>
         <url>/components/title/simple-title</url>
         <properties>
            <title>title.repository</title>
            <subtitle>title.browser</subtitle>
         </properties>
      </component>

      <component>
         <region-id>tasks-title</region-id>
         <url>/components/title/simple-title</url>
         <properties>
            <title>title.myTasks</title>
         </properties>
      </component>
      <component>
         <region-id>portlet-tasks-title</region-id>
         <url>/components/title/simple-title</url>
         <properties>
            <title>title.myTasks</title>
         </properties>
      </component>

      <component>
         <region-id>workflows-title</region-id>
         <url>/components/title/simple-title</url>
         <properties>
            <title>title.myWorkflows</title>
         </properties>
      </component>
      <component>
         <region-id>portlet-workflows-title</region-id>
         <url>/components/title/simple-title</url>
         <properties>
            <title>title.myWorkflows</title>
         </properties>
      </component>


      <!-- Navigation -->

      <component>
         <region-id>navigation</region-id>
         <url>/components/navigation/collaboration-navigation</url>
      </component>
      <component>
         <region-id>portlet-navigation</region-id>
         <url>/components/navigation/collaboration-navigation</url>
      </component>

      <component>
         <region-id>tasks-navigation</region-id>
         <url>/components/workflow/task-toolbar</url>
      </component>
      <component>
         <region-id>portlet-tasks-navigation</region-id>
         <url>/components/workflow/task-toolbar</url>
      </component>

      <component>
         <region-id>workflows-navigation</region-id>
         <url>/components/workflow/workflow-toolbar</url>
      </component>
      <component>
         <region-id>portlet-workflows-navigation</region-id>
         <url>/components/workflow/workflow-toolbar</url>
      </component>


      <!-- Workflow header, form, actions & data loader -->

      <component>
         <region-id>workflow-details-header</region-id>
         <url>/components/workflow/workflow-details-header</url>
      </component>

      <component>
         <region-id>workflow-form</region-id>
         <url>/components/workflow/workflow-form</url>
      </component>

      <component>
         <region-id>workflow-details-actions</region-id>
         <url>/components/workflow/workflow-details-actions</url>
      </component>
      
      <component>
         <region-id>data-loader</region-id>
         <url>/components/data/data-loader</url>
         <properties>
            <url>api/workflow-instances/{workflowId}?includeTasks=true</url>
            <eventName>workflowDetailedData</eventName>
            <eventData>data</eventData>
         </properties>
      </component>

   </components>
</template-instance>
