<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" version="1.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
   <portlet>
      <description>CMIS Folder Browser</description>
      <portlet-name>CMISFolder</portlet-name>
      <portlet-class>org.alfresco.web.portlet.ProxyPortlet</portlet-class>

      <init-param>
         <name>scriptUrl</name>
         <value>/service/sample/cmis/repo</value>
      </init-param>

      <supports>
         <mime-type>text/html</mime-type>
         <portlet-mode>VIEW</portlet-mode>
      </supports>

      <portlet-info>
         <title>CMIS Folder Browser</title>
         <short-title>CMIS Folder</short-title>
      </portlet-info>
   </portlet>

   <portlet>
      <description>Share Document Libraries</description>
      <portlet-name>ShareDocLib</portlet-name>
      <portlet-class>org.alfresco.web.portlet.ProxyPortlet</portlet-class>

      <init-param>
         <name>scriptUrl</name>
         <value>/page/my-documentlibraries</value>
      </init-param>

      <supports>
         <mime-type>text/html</mime-type>
         <portlet-mode>VIEW</portlet-mode>
      </supports>

      <portlet-info>
         <title>My Document Libraries</title>
         <short-title>Share DocLib</short-title>
      </portlet-info>
   </portlet>

   <portlet>
      <description>Share Repository Library</description>
      <portlet-name>ShareRepoDocLib</portlet-name>
      <portlet-class>org.alfresco.web.portlet.ProxyPortlet</portlet-class>

      <init-param>
         <name>scriptUrl</name>
         <value>/page/repository</value>
      </init-param>

      <supports>
         <mime-type>text/html</mime-type>
         <portlet-mode>VIEW</portlet-mode>
      </supports>

      <portlet-info>
         <title>Repository Library</title>
         <short-title>Share Repo DocLib</short-title>
      </portlet-info>
   </portlet>

   <user-attribute>
      <name>user.home-info.online.email</name>
   </user-attribute>

</portlet-app>
